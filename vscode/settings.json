{
  // General Settings
  "editor.fontFamily": "Ricty,Cica,Myrica M,Source Han Code JP,Cascadia Code,Fira Code,SF Mono Square",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "boundary",

  "terminal.integrated.fontFamily": "Ricty for Powerline, SF Mono Square",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro",
  "editor.minimap.renderCharacters": false,

  "files.autoSave": "afterDelay",
  "editor.formatOnType": true,

  "git.autofetch": true,

  "editor.suggestSelection": "first",  // 自動追加
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue", // 自動追加

  // LaTeX Settings
  "latex-workshop.latex.recipes": [
    {
      "name": "ptex2pdf",
      "tools": ["ptex2pdf"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "ptex2pdf",
      "command": "ptex2pdf",
      "args": [
        "-l",
        "-ot",
        "-kanji=utf8",
        "-synctex=1",
        "-interaction=nonstopmode", // これdev
        "-file-line-error", // これdev
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",

  // Python setting
  "python.languageServer": "Pylance",
  // "python.languageServer": "Microsoft",
  "python.analysis.typeCheckingMode": "basic",

  "python.venvPath": ".venv",
  "python.pythonPath": ".venv/bin/python",

  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": ["--max-line-length 120"],
  // "python.formatting.blackPath": "~/.local/bin/black",

  "python.linting.pylintEnabled": false,

  "python.linting.flake8Enabled": true,
  // "python.linting.flake8Path": "~/.local/bin/flake8",
  "python.linting.flake8Args": ["--ignore=E501"],

  "python.linting.mypyEnabled": true,
  // "python.linting.mypyPath": "~/.local/bin/mypy",

  // JavaScript Settings
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // C/C++ Settings
  "C_Cpp.clang_format_fallbackStyle": "Google", // 仮
  // "cpplint.cpplintPath": "~/.local/bin/cpplint", // 仮

  "cmake.configureOnOpen": true,
  "cmake.debugConfig": {
    "stopAtEntry": false,
    "MIMode": "lldb",
    "miDebuggerPath": "/usr/bin/lldb", // 絶対パスでないとエラー
    "logging": {
      "trace": false,
      "engineLogging": false,
      "traceResponse": false
    }
  },

  // Others Language Settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "files.associations": {
    "*.json": "jsonc"
  },

  // Uncategorized Setteings
  "meaningless": "VSCodeが自動で追記する際，最終行に書かれるようする"
}
